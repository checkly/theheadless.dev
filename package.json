{
  "name": "guides.checklyhq.com",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "vuepress dev blog",
    "build": "vuepress build blog",
    "lint": "eslint blog/.vuepress",
    "lint:fix": "eslint --fix blog/.vuepress"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@vuepress/theme-blog": "^2.2.0",
    "eslint": "^7.3.1",
    "eslint-config-checkly": "0.0.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "node-sass": "^4.14.1",
    "playwright": "^1.1.1",
    "prettier": "^2.0.5",
    "puppeteer": "^4.0.1",
    "sass-loader": "^8.0.2",
    "vue-feather-icons": "^5.0.0",
    "vuepress": "^1.5.2"
  },
  "dependencies": {
    "vue-tabs-component": "^1.5.0",
    "vuepress-plugin-container": "^2.1.4",
    "vuepress-plugin-tabs": "^0.3.0"
  },
  "eslintConfig": {
    "extends": [
      "checkly",
      "checkly/vue"
    ],
    "overrides": [
      {
        "files": ["**/*.vue", "**/*.js"],
        "rules": {
         "vue/require-prop-types": "off",
         "vue/no-unused-components": "off",
         "no-mixed-operators": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --cache --fix blog/.vuepress"
  }
}
